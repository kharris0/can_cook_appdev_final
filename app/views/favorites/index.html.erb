<div>
  <div>
    <h1>
      My fridge and pantry
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add food to your fridge and pantry!
    </h2>

    <form action="/insert_favorite" method="post">
      <div>
        <input type="hidden" name="query_user_id" value="<%= @current_user.id %>">
      </div>

      <div>
        <label for="food_id_box">
          Type to add foods or choose from the list:
        </label>
        <input list="ingredients" name="query_ingredient_id" id="ingredient_id_box">
        <datalist id="ingredients">
          <option value="Food 1">
          <option value="Food 2">
          <option value="Food 3">
        </datalist>
        <%# <label for="recipe_submit_button"> Add Recipe </label>
        <input type="submit" id="recipe_submit_button" name="query_recipe_id"> %>
        <%# <input type="text" id="recipe_id_box" name="query_recipe_id"> %>

      </div>
      <button>
        Add food!
      </button>
    </form>
  </div>
</div>

